---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section class="relative overflow-hidden">
    <Wrapper variant="standard" class="pb-32 lg:pb-48 pt-12">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-white font-medium lg:w-1/3"
      >
        Colors
      </Text>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="pb-8">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <!-- Accent Color Column -->
        <div>
          <Text tag="p" variant="textBase" class="mt-4 text-white text-balance"
            >Accent</Text
          >
          <div class="mt-6 flex flex-col gap-2">
            <div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-50"></div>
              <span class="text-sm text-base-400"> Accent 50 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-100"></div>
              <span class="text-sm text-base-400"> Accent 100 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-200"></div>
              <span class="text-sm text-base-400"> Accent 200 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-300"></div>
              <span class="text-sm text-base-400"> Accent 300 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-400"></div>
              <span class="text-sm text-base-400"> Accent 400 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-500"></div>
              <span class="text-sm text-base-400"> Accent 500 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-600"></div>
              <span class="text-sm text-base-400"> Accent 600 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-700"></div>
              <span class="text-sm text-base-400"> Accent 700 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-800"></div>
              <span class="text-sm text-base-400"> Accent 800 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-900"></div>
              <span class="text-sm text-base-400"> Accent 900 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-accent-950"></div>
              <span class="text-sm text-base-400"> Accent 950 </span>
            </div>
          </div>
        </div>
        <!-- Base Color Column -->
        <div>
          <Text tag="p" variant="textBase" class="mt-4 text-white text-balance"
            >Base</Text
          >
          <div class="mt-6 flex flex-col gap-2">
            <div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-50"></div>
              <span class="text-sm text-base-400"> Base 50 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-100"></div>
              <span class="text-sm text-base-400"> Base 100 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-200"></div>
              <span class="text-sm text-base-400"> Base 200 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-300"></div>
              <span class="text-sm text-base-400"> Base 300 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-400"></div>
              <span class="text-sm text-base-400"> Base 400 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-500"></div>
              <span class="text-sm text-base-400"> Base 500 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-600"></div>
              <span class="text-sm text-base-400"> Base 600 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-700"></div>
              <span class="text-sm text-base-400"> Base 700 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-800"></div>
              <span class="text-sm text-base-400"> Base 800 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-900"></div>
              <span class="text-sm text-base-400"> Base 900 </span>
            </div><div class="inline-flex items-center gap-2">
              <div class="p-6 rounded-lg bg-base-950"></div>
              <span class="text-sm text-base-400"> Base 950 </span>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
