---
// Fundation
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/components/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pb-32 lg:pb-48 pt-12">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-white font-medium lg:w-1/3"
      >
        Error 404
      </Text>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="pb-8">
      <Text
        tag="p"
        variant="textBase"
        class="text-base-400 text-balance max-w-xl"
      >
        Sorry, the page you are looking for does not exist. It might have been
        removed, renamed, or is temporarily unavailable.
      </Text>
      <div class="mt-8 flex flex-wrap gap-4">
        <Link
          size="base"
          variant="default"
          animated={true}
          withArrow={true}
          title="#_"
          href="/"
        >
          Go back home
        </Link>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
