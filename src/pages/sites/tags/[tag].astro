---
// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/components/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import BigCard from "@/components/sites/BigCard.astro";
import FiltersSidebar from "@/components/sites/FiltersSidebar.astro";
// Retrieve all posts from the "posts" collection
const alltools = await getCollection("sites");
import { getCollection } from "astro:content";
export async function getStaticPaths() {
  const allTools = await getCollection("sites");
  const uniqueTags = [
    ...new Set(allTools.map((post) => post.data.tags).flat()),
  ];
  return uniqueTags.map((tag) => {
    const filteredPosts = allTools.filter((post) =>
      post.data.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { tools: filteredPosts },
    };
  });
}
const { tag } = Astro.params;
// Collect all unique tags
const allTags = [...new Set(alltools.flatMap((post) => post.data.tags || []))];
const sortedTags = allTags.sort((a, b) => a.localeCompare(b));
---

<BaseLayout pageTitle={tag}>
  <section class="relative overflow-hidden">
    <Wrapper variant="standard" class="pb-32 lg:pb-48 pt-12">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-white font-medium lg:w-1/3"
      >
        Explore web apps related to {tag}
      </Text>
    </Wrapper>
  </section>
  <section
    x-data="{ leftDrawerOpen: false }"
    @keydown.window.escape="open = false"
  >
    <Wrapper variant="standard" class="pb-8">
      <div class="flex items-center gap-1">
        <FiltersSidebar />
        <div
          class="scrollable-content relative flex snap-x snap-proximity gap-1 py-2 px-2 overflow-x-scroll scrollbar-hide"
        >
          {
            sortedTags.map((tag) => (
              <Link
                size="sm"
                variant="muted"
                animated={true}
                withArrow={true}
                title={tag}
                aria-label={tag}
                href={`/sites/tags/${tag}`}
                class="capitalize"
              >
                {tag}
              </Link>
            ))
          }
        </div>
      </div>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-3 mt-2">
        {
          alltools
            .filter((post) => post.data.tags.includes(tag)) // Filter by the selected tag
            .map((filteredPost) => <BigCard post={filteredPost} />)
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
