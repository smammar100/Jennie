---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/components/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import SubmitModal from "@/components/sites/SubmitModal.astro";
// Quick access links
const links = [
  { href: "/sites/home", text: "Sites" },

  { href: "/system/overview", text: "Overview" },
];
// Define navigation data
const navigation = [
  {
    title: "Navigation",
    items: [
      {
        href: "/blog/home",
        text: "Blog",
      },
      {
        href: "/store/home",
        text: "Store",
      },
      {
        href: "/system/typography",
        text: "Typography",
      },
      {
        href: "/system/buttons",
        text: "Buttons",
      },
      {
        href: "/system/links",
        text: "Links",
      },
      {
        href: "/system/overview",
        text: "Overview",
      },
      {
        href: "https://buy.polar.sh/polar_cl_XW5OJZO3ycbvB4jxhdi9cbOkfdopxGj4Hx1E_MOPpyU",
        text: "Buy Trendspotter",
      },
    ],
  },
];
---

<section class="z-10 bg-base-900">
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-2 md:grid-cols-2 items-center w-full gap-3 pt-2 lg:pt-8"
    >
      <a href="/" class="shrink-0">
        <Logo class="h-4 text-white" />
      </a>
      <div class="flex items-center gap-2 lg:gap-4 ml-auto">
        <div class="flex items-center gap-2 lg:gap-4">
          {
            links.map((link) => (
              <Text
                tag="a"
                href={link.href}
                class="text-white text-xs lg:text-base hover:text-accent-500 font-medium"
              >
                {link.text}
              </Text>
            ))
          }
        </div>
        <div class="flex flex-wrap gap-4">
          <div x-data="{ open: false }">
            <button
              x-on:click="open = true"
              title="#_"
              class="justify-center text-white text-xs lg:text-base focus:text-accent-500 font-medium"
            >
              Submit
            </button>
            <SubmitModal />
          </div>
        </div>
        <button
          type="button"
          class="size-9 inline-flex items-center justify-center group"
          @click="rightDrawerOpen = true"
        >
          <div class="p-1.5 group-focus-visible:bg-base-50">
            <svg
              class="text-white size-5 shrink-0 transition duration-200 ease-in-out group-focus:rotate-6"
              viewBox="0 0 15 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M3.87935 1H3.9H11.1H11.1207C11.5231 0.999994 11.8553 0.999989 12.1259 1.0221C12.407 1.04506 12.6653 1.09434 12.908 1.21799C13.2843 1.40973 13.5903 1.7157 13.782 2.09202C13.9057 2.33469 13.9549 2.59304 13.9779 2.87409C14 3.14468 14 3.47686 14 3.87934V3.9V11.1V11.1207C14 11.5231 14 11.8553 13.9779 12.1259C13.9549 12.407 13.9057 12.6653 13.782 12.908C13.5903 13.2843 13.2843 13.5903 12.908 13.782C12.6653 13.9057 12.407 13.9549 12.1259 13.9779C11.8553 14 11.5231 14 11.1207 14H11.1H3.9H3.87934C3.47686 14 3.14468 14 2.87409 13.9779C2.59304 13.9549 2.33469 13.9057 2.09202 13.782C1.7157 13.5903 1.40973 13.2843 1.21799 12.908C1.09434 12.6653 1.04506 12.407 1.0221 12.1259C0.999989 11.8553 0.999994 11.5231 1 11.1207V11.1207V11.1V3.9V3.87935V3.87934C0.999994 3.47686 0.999989 3.14468 1.0221 2.87409C1.04506 2.59304 1.09434 2.33469 1.21799 2.09202C1.40973 1.7157 1.7157 1.40973 2.09202 1.21799C2.33469 1.09434 2.59304 1.04506 2.87409 1.0221C3.14469 0.999989 3.47687 0.999994 3.87935 1ZM2.95552 2.01878C2.73631 2.03669 2.62421 2.06915 2.54601 2.10899C2.35785 2.20487 2.20487 2.35785 2.10899 2.54601C2.06915 2.62421 2.03669 2.73631 2.01878 2.95552C2.00039 3.18056 2 3.47171 2 3.9V7H7V2H3.9C3.47171 2 3.18056 2.00039 2.95552 2.01878ZM7 8H2V11.1C2 11.5283 2.00039 11.8194 2.01878 12.0445C2.03669 12.2637 2.06915 12.3758 2.10899 12.454C2.20487 12.6422 2.35785 12.7951 2.54601 12.891C2.62421 12.9309 2.73631 12.9633 2.95552 12.9812C3.18056 12.9996 3.47171 13 3.9 13H7V8ZM8 8H13V11.1C13 11.5283 12.9996 11.8194 12.9812 12.0445C12.9633 12.2637 12.9309 12.3758 12.891 12.454C12.7951 12.6422 12.6422 12.7951 12.454 12.891C12.3758 12.9309 12.2637 12.9633 12.0445 12.9812C11.8194 12.9996 11.5283 13 11.1 13H8V8ZM13 7H8V2H11.1C11.5283 2 11.8194 2.00039 12.0445 2.01878C12.2637 2.03669 12.3758 2.06915 12.454 2.10899C12.6422 2.20487 12.7951 2.35785 12.891 2.54601C12.9309 2.62421 12.9633 2.73631 12.9812 2.95552C12.9996 3.18056 13 3.47171 13 3.9V7Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd"></path>
            </svg>
          </div>
        </button>
      </div>
    </div>
  </Wrapper>
</section>
<div
  x-show="rightDrawerOpen"
  x-ref="dialog"
  aria-modal="true"
  style="display: none"
  x-description="off canvas menu for mobile and desktop"
  class="fixed inset-0 z-40 flex justify-end h-full p-2 lg:p-3"
>
  <!-- Overlay -->
  <div
    x-show="rightDrawerOpen"
    x-transition:enter="transition-opacity ease-linear duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-linear duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 bg-base-950/90"
    @click="rightDrawerOpen = false"
    aria-hidden="true"
  >
  </div>
  <!-- Menu (Right Side) -->
  <div
    x-show="rightDrawerOpen"
    x-transition:enter="transition ease-in-out duration-300 transform"
    x-transition:enter-start="translate-x-full"
    x-transition:enter-end="translate-x-0"
    x-transition:leave="transition ease-in-out duration-300 transform"
    x-transition:leave-start="translate-x-0"
    x-transition:leave-end="translate-x-full"
    class="relative flex flex-col w-full lg:max-w-[26rem] bg-base-800 shadow-lg h-full overflow-hidden rounded-xl"
  >
    <!-- Close Button -->
    <div
      x-show="rightDrawerOpen"
      x-transition:enter="ease-in-out duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="ease-in-out duration-300"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      class="absolute top-0 right-0 p-2 px-6 py-3"
    >
      <button
        type="button"
        class="text-base-400 hover:text-white focus:outline-none"
        @click="rightDrawerOpen = false"
      >
        <span class="sr-only">Close sidebar</span>
        <svg
          class="size-4"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <!-- Menu Content -->
    <div class="flex-1 overflow-y-auto">
      <div class="flex items-center flex-shrink-0 p-2 py-3 px-6">
        <Text
          tag="p"
          variant="textSM"
          class="uppercase text-white font-semibold"
        >
          Menu
        </Text>
      </div>
      <nav role="navigation" class="flex flex-col justify-between">
        <div class="flex flex-col gap-6 lg:gap-12 border-y border-base-900">
          {
            navigation.map((section) => (
              <ul
                role="navigation"
                class="flex flex-col gap-1 divide-y divide-base-900"
              >
                {section.items.map((item) => (
                  <li class="p-2 py-2 px-6">
                    <Text
                      tag="a"
                      variant="textSM"
                      href={item.href}
                      class="text-white font-semibold  hover:text-accent-500"
                    >
                      {item.text}
                    </Text>
                  </li>
                ))}
              </ul>
            ))
          }
        </div>
      </nav>
    </div>
    <!-- Footer -->
    <div class="flex-shrink-0 px-6 py-3 border-t border-base-900">
      <div class="flex items-center gap-2">
        <Link
          size="sm"
          variant="default"
          class="w-auto justify-center"
          animated={true}
          withArrow={true}
          href="/forms/signin">Sign in</Link
        >
        <Link
          size="sm"
          variant="accent"
          animated={true}
          withArrow={true}
          class="w-auto justify-center"
          href="/forms/signup">Sign up</Link
        >
      </div>
    </div>
  </div>
</div>
