---
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/components/Button.astro";
---

<div class="flex flex-col h-full justify-between bg-base-800 rounded-3xl p-8">
  <Text tag="p" variant="textXL" class="text-white lg:w-1/2">
    Completely free access
  </Text>

  <div class="flex flex-col gap-12 mt-20">
    <div class="flex flex-col">
      <Text tag="p" variant="display6XL" class="text-white font-semibold"
        >$0</Text
      >
      <Text tag="p" variant="textBase" class="text-base-400 mt-4 text-balance">
        Get limited access to everything.
      </Text>
    </div>
    <Button
      size="xl"
      submit="true"
      variant="default"
      animated={true}
      withArrow={true}
    >
      Book
    </Button>
  </div>
</div>
