---
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/components/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import SubmitModal from "../SubmitModal.astro";
---

<section>
  <Wrapper variant="standard" class="pb-32 lg:pb-48 pt-12">
    <div class="text-center max-w-xs mx-auto">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-white font-medium "
      >
        Submissions
      </Text>
      <Text tag="p" variant="textBase" class="mt-4 text-base-400 text-balance">
        Your submitted sites
      </Text>
    </div>
  </Wrapper>

  <section>
    <Wrapper variant="narrow" class="pb-8">
      <div class="mt-12" x-data="{ open: false }">
        <!-- Trigger -->
        <Button size="sm" variant="muted" x-on:click="open = true">
          <svg
            width="15"
            height="15"
            viewBox="0 0 15 15"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M8 2.75C8 2.47386 7.77614 2.25 7.5 2.25C7.22386 2.25 7 2.47386 7 2.75V7H2.75C2.47386 7 2.25 7.22386 2.25 7.5C2.25 7.77614 2.47386 8 2.75 8H7V12.25C7 12.5261 7.22386 12.75 7.5 12.75C7.77614 12.75 8 12.5261 8 12.25V8H12.25C12.5261 8 12.75 7.77614 12.75 7.5C12.75 7.22386 12.5261 7 12.25 7H8V2.75Z"
              fill="currentColor"
              fill-rule="evenodd"
              clip-rule="evenodd"></path></svg
          >
          Add a new site
        </Button>
        <!-- Modal -->

        <SubmitModal />
      </div>
      <div
        class="flex flex-col divide-y divide-base-900 bg-base-800 rounded-3xl mt-4"
      >
        <div class="flex items-baseline lg:justify-between px-8 py-4">
          <Text tag="h3" variant="textBase" class="font-medium text-white">
            https://lexingtonthemes.com
          </Text>

          <a
            href="#_"
            title="#_"
            class="size-8 bg-base-900 p-2 flex hover:bg-base-100 rounded-full transition-colors text-white hover:text-base-900"
            title="#_"
          >
            <svg
              class="size-4"
              viewBox="0 0 15 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
        <div class="flex items-baseline lg:justify-between px-8 py-4">
          <Text tag="h3" variant="textBase" class="font-medium text-white">
            https://oxbowui.com
          </Text>

          <a
            href="#_"
            title="#_"
            class="size-8 bg-base-900 p-2 flex hover:bg-base-100 rounded-full transition-colors text-white hover:text-base-900"
            title="#_"
          >
            <svg
              class="size-4"
              viewBox="0 0 15 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
        <div class="flex items-baseline lg:justify-between px-8 py-4">
          <Text tag="h3" variant="textBase" class="font-medium text-white">
            https://colorsandfonts.com
          </Text>

          <a
            href="#_"
            title="#_"
            class="size-8 bg-base-900 p-2 flex hover:bg-base-100 rounded-full transition-colors text-white hover:text-base-900"
            title="#_"
          >
            <svg
              class="size-4"
              viewBox="0 0 15 15"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M3.64645 11.3536C3.45118 11.1583 3.45118 10.8417 3.64645 10.6465L10.2929 4L6 4C5.72386 4 5.5 3.77614 5.5 3.5C5.5 3.22386 5.72386 3 6 3L11.5 3C11.6326 3 11.7598 3.05268 11.8536 3.14645C11.9473 3.24022 12 3.36739 12 3.5L12 9.00001C12 9.27615 11.7761 9.50001 11.5 9.50001C11.2239 9.50001 11 9.27615 11 9.00001V4.70711L4.35355 11.3536C4.15829 11.5488 3.84171 11.5488 3.64645 11.3536Z"
                fill="currentColor"
                fill-rule="evenodd"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
      </div>
    </Wrapper>
  </section>
</section>
